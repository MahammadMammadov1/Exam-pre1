@model Blog
<div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-action="index" asp-controller="blog" class="btn btn-primary">Go Back</a>
        <a asp-action="delete" asp-controller="blog"  class="btn btn-danger">Delete</a>
    </div>
</div>